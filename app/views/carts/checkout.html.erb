<div class="row">
   <div class="col-md-12">

    <h2> 购物明细 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
          <% current_cart.cart_items.each do |cart_item| %>
              <tr>
                  <td><%= link_to(cart_item.product.title, product_path(cart_item.product)) %></td>
                  <td>
                    成人：<%= cart_item.product.price %>
                    <br>
                    儿童：<%= cart_item.product.child_price %>
                  </td>
                  <td>
                    成人：<%= cart_item.quantity %>
                    <br>
                    儿童：<%= cart_item.child_quantity %>
                  </td>
              </tr>
          <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= render_cart_total_price(current_cart) %> CNY
      </span>
    </div>

    <span class="favorites ">
      <% if current_user && current_user.already_favorite?(@product) %>
        <%= link_to(content_tag(:i, '使用积分优惠', class: 'fa fa-check-square-o'), favorite_product_path(@product, type:"unfavorite"), method: :put) %>
      <% else %>
        <%= link_to(content_tag(:i, '使用积分优惠', class: 'fa fa-square-o'), favorite_product_path(@product, type:"favorite"), method: :put) %>
      <% end %>
    </span>

    <hr>

    <h2> 订单资讯 </h2>

    <div class="order-form">

      <%= simple_form_for @order do |f| %>



          <legend> 订购人</legend>
          <div class="form-group col-lg-6">
            <%= f.input :billing_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.input :billing_address  %>
          </div>

          <legend> 收货人</legend>
          <div class="form-group col-lg-6">
           <%= f.input :shipping_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.input :shipping_address  %>
          </div>

        <div class="checkout">
          <%= f.submit "生成订单", class: "btn btn-lg btn-danger pull-right",
                       data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
