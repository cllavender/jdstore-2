<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>品名</th>
        <th>描述</th>
        <th>价格</th>
        <th>库存</th>
        <th>创建时间</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>#</td>
          <td><%= link_to(product.title, product_path(product)) %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= product.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
