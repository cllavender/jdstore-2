<div class="container all-product-box">
  <div class="row">

    <% if @products.blank?%>
      <div>
        <h3 class="search-info-title">很抱歉！没有找到您想要的信息...</h3>
      </div>
    <% else %>
      <h3 class="search-info-title">
        找到 <%= @products.count %> 个符合 "<%= @query_string %>" 的商品
      </h3>
        <% @products.each do |product| %>
        <div class="col-xs-6 col-md-3 product-list-style">
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
          <div style="height:50px;">
          <%= product.title %>   <i class="fa fa-jpy" aria-hidden="true"></i>:<%= product.price %>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
